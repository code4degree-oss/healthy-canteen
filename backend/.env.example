# ============================================
# The Healthy Canteen - Environment Variables
# Copy this file to .env and fill in real values
# ============================================

# --- Database ---
DB_NAME=healthy_canteen
DB_USER=postgres
DB_PASS=your_db_password_here
DB_HOST=localhost
DB_PORT=5432
# OR use a single connection URL (overrides individual DB_* vars):
# DATABASE_URL=postgresql://postgres:password@localhost:5432/healthy_canteen

# --- Server ---
PORT=5000
NODE_ENV=production

# --- Auth ---
JWT_SECRET=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING
GOOGLE_CLIENT_ID=your_google_client_id.apps.googleusercontent.com

# --- Frontend ---
# Comma-separated list of allowed frontend origins
FRONTEND_URL=https://yourdomain.com
